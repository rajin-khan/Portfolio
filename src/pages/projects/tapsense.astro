---
import Layout from "../../layouts/main.astro";
import PageHeading from "../../components/page-heading.astro";

const project = {
  name: "TapSense",
  description: "Accessibility App for the Visually Impaired.",
  image: "/assets/images/projects/TapSense.png",
  githubUrl: "https://github.com/rajin-khan/TapSense",
  externalUrl: "https://forms.gle/eNikmS3Znb9zGgyv9",
  tags: [

  ],
  features: [
    { name: "Reader", description: "Scan text from images and convert to speech.", icon: "üîç" },
    { name: "To-Do", description: "Voice-powered dynamic to-do list creation.", icon: "üóíÔ∏è" },
    { name: "Navigation", description: "Dynamic directions with voice commands.", icon: "üó∫Ô∏è" },
    { name: "Detection", description: "Identify objects with confidence levels.", icon: "üëì" }
  ],
  useCases: [
    { name: "Daily Tasks", description: "Simplify reading and task management.", emoji: "üìã" },
    { name: "Navigation", description: "Guide users with voice directions.", emoji: "üö∂" },
    { name: "Object Recognition", description: "Identify surroundings easily.", emoji: "üîé" },
    { name: "Productivity", description: "Boost efficiency with voice tools.", emoji: "‚öôÔ∏è" }
  ],
  roadmap: [
    { name: "iOS Support", status: "In Progress" },
    { name: "Advanced Detection", status: "Planned" },
    { name: "Multi-Language Support", status: "Planned" },
    { name: "Custom Voice Commands", status: "Planned" }
  ]
};
---

<Layout title={project.name}>
  <section class="relative z-20 max-w-2xl mx-auto my-12 px-7 lg:px-0">
    <style>
      /* Custom Styles for TapSense Page */
      .tapsense-section {
        margin-bottom: 2.5rem;
      }

      @keyframes fadeIn {
        0% { opacity: 0; }
        100% { opacity: 1; }
      }

      @keyframes slideInUp {
        0% { opacity: 0; transform: translateY(20px); }
        100% { opacity: 1; transform: translateY(0); }
      }

      @keyframes glowPulse {
        0%, 100% { 
          box-shadow: 0 0 5px rgba(217, 56, 30, 0.3), 0 0 10px rgba(249, 115, 22, 0.3); 
        }
        50% { 
          box-shadow: 0 0 15px rgba(217, 56, 30, 0.6), 0 0 20px rgba(249, 115, 22, 0.6); 
        }
      }

      .glow-pulse {
        animation: glowPulse 2s infinite ease-in-out;
      }

      /* Light mode subtle glow */
      html:not(.dark) .glow-pulse {
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        animation: none;
      }

      /* Dark mode maintains glow animation */
      .dark .glow-pulse {
        animation: glowPulse 2s infinite ease-in-out;
      }

      .fade-in {
        animation: fadeIn 0.8s ease-in-out;
      }

      .slide-in-up {
        animation: slideInUp 0.6s ease-out forwards;
      }

      .banner-image {
        border: 2px solid transparent;
        background: linear-gradient(45deg, #d9381e, #f97316);
        border-radius: 1rem;
        padding: 4px;
        transition: transform 0.3s ease;
      }

      .banner-image:hover {
        transform: scale(1.02);
      }

      .tags-container {
        opacity: 1;
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
        margin-bottom: 1rem;
      }

      .cta-buttons {
        opacity: 1;
        display: flex;
        flex-direction: column;
        gap: 1rem;
        margin: 1.5rem 0;
      }

      @media (min-width: 640px) {
        .cta-buttons {
          flex-direction: row;
        }
      }

      .features-grid, .use-cases-grid, .roadmap-grid, .team-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: 1rem;
        margin-top: 1.5rem;
      }

      @media (min-width: 640px) {
        .features-grid, .use-cases-grid, .roadmap-grid, .team-grid {
          grid-template-columns: repeat(2, 1fr);
        }
      }

      .feature-card, .use-case-card, .roadmap-card, .team-card {
        border: 1px solid;
        border-radius: 0.75rem;
        padding: 1rem;
        transition: all 0.3s ease;
        opacity: 1;
        background-color: transparent;
      }

      /* Light mode card styles */
      html:not(.dark) .feature-card,
      html:not(.dark) .use-case-card,
      html:not(.dark) .roadmap-card,
      html:not(.dark) .team-card {
        border-color: rgba(217, 56, 30, 0.2);
        background-color: rgba(255, 245, 245, 0.5);
      }

      html:not(.dark) .feature-card:hover,
      html:not(.dark) .use-case-card:hover,
      html:not(.dark) .roadmap-card:hover,
      html:not(.dark) .team-card:hover {
        transform: translateY(-5px);
        border-color: rgba(217, 56, 30, 0.5);
        box-shadow: 0 5px 15px rgba(217, 56, 30, 0.2);
        background-color: rgba(255, 250, 250, 0.8);
      }

      /* Dark mode card styles */
      .dark .feature-card,
      .dark .use-case-card,
      .dark .roadmap-card,
      .dark .team-card {
        border-color: rgba(249, 115, 22, 0.2);
        background-color: rgba(50, 40, 40, 0.3);
      }

      .dark .feature-card:hover,
      .dark .use-case-card:hover,
      .dark .roadmap-card:hover,
      .dark .team-card:hover {
        transform: translateY(-5px);
        border-color: rgba(249, 115, 22, 0.5);
        box-shadow: 0 5px 15px rgba(249, 115, 22, 0.3);
        background-color: rgba(70, 60, 60, 0.5);
      }

      .feature-card .icon, .use-case-card .emoji {
        font-size: 1.5rem;
        margin-right: 0.75rem;
      }

      /* Light mode icon colors */
      html:not(.dark) .feature-card .icon,
      html:not(.dark) .use-case-card .emoji {
        color: #d9381e;
      }

      /* Dark mode icon colors */
      .dark .feature-card .icon,
      .dark .use-case-card .emoji {
        color: #f97316;
      }

      .feature-card h3, .use-case-card h3, .roadmap-card h3, .team-card h3 {
        font-size: 1.1rem;
        font-weight: 600;
        margin-bottom: 0.25rem;
        color: inherit;
      }

      /* Light mode text colors */
      html:not(.dark) .feature-card h3,
      html:not(.dark) .use-case-card h3,
      html:not(.dark) .roadmap-card h3,
      html:not(.dark) .team-card h3 {
        color: #1a1a1a;
      }

      html:not(.dark) .feature-card p,
      html:not(.dark) .use-case-card p,
      html:not(.dark) .roadmap-card p,
      html:not(.dark) .team-card p {
        color: #4a4a4a;
      }

      /* Dark mode text colors */
      .dark .feature-card h3,
      .dark .use-case-card h3,
      .dark .roadmap-card h3,
      .dark .team-card h3 {
        color: #ffffff;
      }

      .dark .feature-card p,
      .dark .use-case-card p,
      .dark .roadmap-card p,
      .dark .team-card p {
        color: #d4d4d8;
      }

      .feature-card p, .use-case-card p, .roadmap-card p, .team-card p {
        font-size: 0.875rem;
      }

      .roadmap-card .status {
        font-size: 0.75rem;
        font-weight: 500;
        padding: 0.25rem 0.5rem;
        border-radius: 1rem;
        display: inline-block;
        margin-bottom: 0.5rem;
      }

      /* Status badge colors for both modes */
      .roadmap-card .status {
        color: #f97316;
        background: rgba(249, 115, 22, 0.1);
      }

      .roadmap-card.in-progress .status {
        color: #d4af37;
        background: rgba(212, 175, 55, 0.1);
      }

      /* Light mode status badges */
      html:not(.dark) .roadmap-card .status {
        color: #d9381e;
        background: rgba(217, 56, 30, 0.1);
      }

      html:not(.dark) .roadmap-card.in-progress .status {
        color: #d4af37;
        background: rgba(212, 175, 55, 0.1);
      }

      .section-heading {
        font-size: 1.5rem;
        font-weight: 700;
        margin-bottom: 1.5rem;
        position: relative;
        opacity: 1;
      }

      /* Light mode heading color */
      html:not(.dark) .section-heading {
        color: #1a1a1a;
      }

      /* Dark mode heading color */
      .dark .section-heading {
        color: #ffffff;
      }

      .section-heading::after {
        content: '';
        position: absolute;
        bottom: -0.5rem;
        left: 0;
        width: 50px;
        height: 2px;
        background: linear-gradient(to right, #d9381e, #f97316);
        border-radius: 1px;
      }

      @media (min-width: 640px) {
        .section-heading {
          font-size: 1.75rem;
        }
      }

      .prose p {
        margin-bottom: 1rem;
      }

      /* Light mode prose colors */
      html:not(.dark) .prose p {
        color: #4a4a4a;
      }

      html:not(.dark) .prose strong {
        color: #1a1a1a;
      }

      /* Dark mode prose colors */
      .dark .prose p {
        color: #d4d4d8;
      }

      .dark .prose strong {
        color: #ffffff;
      }

      .prose ul {
        list-style-type: disc;
        list-style-position: inside;
        margin: 1rem 0;
      }

      .prose li {
        margin-bottom: 0.5rem;
      }

      /* Light mode list colors */
      html:not(.dark) .prose ul {
        color: #4a4a4a;
      }

      /* Dark mode list colors */
      .dark .prose ul {
        color: #d4d4d8;
      }
    </style>

    <!-- Main Section -->
    <div class="tapsense-section fade-in">
      <PageHeading
        title={project.name}
        description={project.description}
      />

      <!-- Banner Image -->
      <div class="my-4">
        <img
          src={project.image}
          alt={project.name}
          class="banner-image w-full h-auto rounded-lg aspect-[16/9] object-cover glow-pulse"
        />
      </div>

      <!-- Tags -->
      <div class="tags-container slide-in-up">
        {project.tags.map((tag) => (
          <span
            class={`px-2 py-1 text-xs font-semibold rounded-lg bg-gradient-to-r ${tag.gradient} text-white`}
          >
            {tag.name}
          </span>
        ))}
      </div>

      <!-- CTA Buttons -->
      <div class="cta-buttons slide-in-up" style="animation-delay: 0.2s;">
        <a
          href={project.externalUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-block px-4 py-1.5 text-sm font-medium rounded-full border border-gray-300 dark:border-neutral-700 bg-gray-900 dark:bg-neutral-200 text-white dark:text-neutral-900 transition-all duration-300 hover:bg-gray-100 dark:hover:bg-neutral-900 hover:text-gray-900 dark:hover:text-neutral-100 glow-pulse"
        >
          Sign Up for Beta
        </a>
        <a
          href={project.githubUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-block px-4 py-1.5 text-sm font-medium rounded-full border border-gray-300 dark:border-neutral-700 bg-transparent text-gray-900 dark:text-neutral-200 transition-all duration-300 hover:bg-gray-900 dark:hover:bg-neutral-200 hover:text-white dark:hover:text-neutral-900"
        >
          View on GitHub
        </a>
      </div>
    </div>

    <!-- Overview Section (Paragraphs) -->
    <div class="tapsense-section">
      <h2 class="section-heading slide-in-up">What is TapSense?</h2>
      <div class="prose prose-sm sm:prose-base dark:prose-invert slide-in-up" style="animation-delay: 0.2s;">
        <p>
          TapSense is an accessibility app designed for visually impaired users, offering intuitive tools to simplify daily tasks. With a minimalistic interface, it provides features like text-to-speech, voice-powered to-do lists, dynamic navigation, and object detection, all tailored to enhance independence and productivity.
        </p>
        <p>
          Built with cross-platform compatibility in mind, TapSense runs smoothly on both iOS and Android using Flutter. Its consistent UI, with "READ SCREEN" buttons always accessible, ensures an easy and seamless experience for users. Currently in beta testing on Android, TapSense aims to empower visually impaired individuals with practical, voice-driven solutions.
        </p>
      </div>
    </div>

    <!-- Features Section -->
    <div class="tapsense-section">
      <h2 class="section-heading slide-in-up">Key Features</h2>
      <div class="features-grid">
        {project.features.map((feature, index) => (
          <div class="feature-card slide-in-up" style={`animation-delay: ${0.2 * (index + 1)}s;`}>
            <div class="flex items-center">
              <span class="icon">{feature.icon}</span>
              <h3>{feature.name}</h3>
            </div>
            <p>{feature.description}</p>
          </div>
        ))}
      </div>
    </div>

    <!-- Use Cases Section -->
    <div class="tapsense-section">
      <h2 class="section-heading slide-in-up">Perfect For</h2>
      <div class="use-cases-grid">
        {project.useCases.map((useCase, index) => (
          <div class="use-case-card slide-in-up" style={`animation-delay: ${0.2 * (index + 1)}s;`}>
            <span class="emoji">{useCase.emoji}</span>
            <div>
              <h3>{useCase.name}</h3>
              <p>{useCase.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- Technology Section (Paragraphs) -->
    <div class="tapsense-section">
      <h2 class="section-heading slide-in-up">Technology & Architecture</h2>
      <div class="prose prose-sm sm:prose-base dark:prose-invert slide-in-up" style="animation-delay: 0.2s;">
        <p>
          TapSense is built using <strong>Flutter</strong> for cross-platform compatibility on iOS and Android. It leverages <strong>Google ML Kit</strong> for text recognition and object detection, ensuring accurate OCR and scene analysis. <strong>Speech-to-Text</strong> and <strong>Text-to-Speech</strong> packages enable voice-driven interactions, while <strong>Hive</strong> provides local NoSQL storage for to-do lists.
        </p>
        <p>
          The app integrates additional tools like the <strong>Image Picker Library</strong> for capturing images, <strong>LatLong</strong> and <strong>Dio</strong> for navigation, ensuring a seamless experience. Its consistent UI design, with "READ SCREEN" buttons for accessibility, makes navigation intuitive for visually impaired users.
        </p>
      </div>
    </div>

    <!-- Roadmap Section -->
    <div class="tapsense-section">
      <h2 class="section-heading slide-in-up">What's Next</h2>
      <div class="roadmap-grid">
        {project.roadmap.map((item, index) => (
          <div class={`roadmap-card slide-in-up ${item.status.toLowerCase().replace(' ', '-')}`} style={`animation-delay: ${0.2 * (index + 1)}s;`}>
            <span class="status">{item.status}</span>
            <h3>{item.name}</h3>
          </div>
        ))}
      </div>
    </div>

    <!-- Final Call to Action -->
    <div class="tapsense-section">
      <h2 class="section-heading slide-in-up">Get Started</h2>
      <div class="prose prose-sm sm:prose-base dark:prose-invert slide-in-up" style="animation-delay: 0.2s;">
        <p>
          Ready to experience TapSense? Join the beta testing on Android or explore the code on GitHub. Help us make daily tasks easier for the visually impaired community!
        </p>
      </div>
      <div class="cta-buttons slide-in-up" style="animation-delay: 0.4s;">
        <a
          href={project.externalUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-block px-4 py-1.5 text-sm font-medium rounded-full border border-gray-300 dark:border-neutral-700 bg-gray-900 dark:bg-neutral-200 text-white dark:text-neutral-900 transition-all duration-300 hover:bg-gray-100 dark:hover:bg-neutral-900 hover:text-gray-900 dark:hover:text-neutral-100 glow-pulse"
        >
          Join Beta Testing
        </a>
        <a
          href={project.githubUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-block px-4 py-1.5 text-sm font-medium rounded-full border border-gray-300 dark:border-neutral-700 bg-transparent text-gray-900 dark:text-neutral-200 transition-all duration-300 hover:bg-gray-900 dark:hover:bg-neutral-200 hover:text-white dark:hover:text-neutral-900"
        >
          Contribute on GitHub
        </a>
      </div>
    </div>

    <!-- Script for Animations -->
    <script is:inline>
      document.addEventListener('DOMContentLoaded', () => {
        const observer = new IntersectionObserver((entries) => {
          entries.forEach(entry => {
            if (entry.isIntersecting) {
              entry.target.classList.add('slide-in-up');
            }
          });
        }, { threshold: 0.1 });

        document.querySelectorAll('.slide-in-up').forEach(element => {
          observer.observe(element);
        });

        // Fallback: Ensure elements are visible after a short delay
        setTimeout(() => {
          document.querySelectorAll('.slide-in-up').forEach(element => {
            element.classList.add('slide-in-up');
          });
        }, 1000);
      });
    </script>
  </section>
</Layout>