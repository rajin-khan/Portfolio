---
import Layout from "../../layouts/main.astro";
import PageHeading from "../../components/page-heading.astro";

// Hardcoded project data
const project = {
  name: "PuffNotes",
  description: "Cozy, Minimalist Note Taker with AI.",
  image: "/assets/images/projects/PuffNotes.png",
  githubUrl: "https://github.com/rajin-khan/PuffNotes",
  externalUrl: "https://puff-notes.vercel.app",
  tags: [
    { name: "Productivity", gradient: "from-green-400 to-yellow-600" },
    { name: "Notes", gradient: "from-blue-500 to-blue-600" },
    { name: "React", gradient: "from-indigo-500 to-purple-600" },
    { name: "AI", gradient: "from-pink-500 to-yellow-600" }
  ]
};
---

<Layout title={project.name}>
  <section class="relative z-20 max-w-2xl mx-auto my-12 px-7 lg:px-0">
    <PageHeading
      title={project.name}
      description={project.description}
    />

    <div class="my-8">
      <img
        src={project.image}
        alt={project.name}
        class="w-full h-auto rounded-lg aspect-[16/9] object-cover"
      />

      <div class="flex flex-wrap gap-1 mt-3">
        {project.tags.map((tag) => (
          <span
            class={`px-2 py-1 text-xs font-semibold rounded-lg bg-gradient-to-r ${tag.gradient} text-white`}
          >
            {tag.name}
          </span>
        ))}
      </div>

      <div class="mt-5 flex flex-col sm:flex-row gap-3">
        <a
          href={project.externalUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-block px-4 py-1.5 text-sm font-medium rounded-full border border-neutral-800 dark:border-neutral-200 bg-neutral-800 dark:bg-neutral-200 text-neutral-100 dark:text-neutral-900 transition-all duration-300 hover:bg-neutral-100 dark:hover:bg-neutral-900 hover:text-neutral-900 dark:hover:text-neutral-100"
        >
          Visit Live Site
        </a>
        <a
          href={project.githubUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-block px-4 py-1.5 text-sm font-medium rounded-full border border-neutral-800 dark:border-neutral-200 bg-transparent text-neutral-800 dark:text-neutral-200 transition-all duration-300 hover:bg-neutral-800 dark:hover:bg-neutral-200 hover:text-neutral-100 dark:hover:text-neutral-900"
        >
          View on GitHub
        </a>
      </div>

      <div class="mt-5 prose prose-sm sm:prose-base dark:prose-invert">
        <p>{project.description}</p>
        <p>
          PuffNotes is a minimalist note-taking app powered by AI, designed to help users organize their thoughts with ease. It features real-time AI suggestions, cloud sync, and a clean, distraction-free interface.
        </p>
      </div>
    </div>
  </section>
</Layout>