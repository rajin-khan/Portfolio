---
import Layout from "../../layouts/main.astro";
import PageHeading from "../../components/page-heading.astro";

const project = {
  name: "MillenAI",
  description: "Performant Chatbot for Open Source LLMs with Agentic Tooling (Web Search and Deep Reasoning).",
  image: "/assets/images/projects/MillenAI.png", // Make sure to add 'ss2.png' to this path and rename it
  githubUrl: "https://github.com/rajin-khan/MillenAI",
  externalUrl: "https://millen-ai.vercel.app",
  tags: [],
  features: [
    { name: "Multi-Model Support", description: "Seamlessly switch between Llama 3.1, GPT-OSS, and more.", icon: "üß†" },
    { name: "Universal Web Search", description: "Enable real-time internet access for any model with a toggle.", icon: "üåê" },
    { name: "Deep Reasoning Mode", description: "Advanced problem-solving for complex analysis.", icon: "‚öôÔ∏è" },
    { name: "Persistent & Private", description: "Secure Firebase Auth ensures conversations are saved.", icon: "üîí" },
    { name: "Live Token Counter", description: "Real-time visualization of context window usage.", icon: "üìä" },
    { name: "File Uploads", description: "Attach and process documents, images, and spreadsheets.", icon: "üìé" }
  ],
  useCases: [
    { name: "AI Power-Users", description: "A unified hub to compare and contrast top-tier LLMs.", emoji: "üöÄ" },
    { name: "Developers", description: "A fast, open-source playground for API testing and integration.", emoji: "üíª" },
    { name: "Researchers", description: "Analyze model outputs with persistent, organized history.", emoji: "üî¨" },
    { name: "Content Creators", description: "Draft, refine, and brainstorm with advanced AI tools.", emoji: "‚úçÔ∏è" }
  ],
  roadmap: [
    { name: "Multi-API Support", status: "In Progress" },
    { name: "Streaming Responses", status: "In Progress" },
    { name: "Collaborative Features", status: "Planned" },
    { name: "Developer API Inspector", status: "Planned" }
  ],
  team: [
    { name: "Rajin Khan", institution: "North South University", github: "https://github.com/rajin-khan" }
  ]
};
---

<Layout title={project.name}>
  <section class="relative z-20 max-w-2xl mx-auto my-12 px-7 lg:px-0">
    <style>
      .millenai-section {
        margin-bottom: 2.5rem;
      }

      @keyframes fadeIn {
        0% { opacity: 0; }
        100% { opacity: 1; }
      }

      @keyframes slideInUp {
        0% { opacity: 0; transform: translateY(20px); }
        100% { opacity: 1; transform: translateY(0); }
      }

      @keyframes glowPulse {
        0%, 100% { 
          box-shadow: 0 0 5px rgba(52, 211, 153, 0.3), 0 0 10px rgba(34, 211, 238, 0.3); 
        }
        50% { 
          box-shadow: 0 0 15px rgba(52, 211, 153, 0.6), 0 0 20px rgba(34, 211, 238, 0.6); 
        }
      }

      .glow-pulse {
        animation: glowPulse 2s infinite ease-in-out;
      }

      html:not(.dark) .glow-pulse {
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        animation: none;
      }

      .dark .glow-pulse {
        animation: glowPulse 2s infinite ease-in-out;
      }

      .fade-in {
        animation: fadeIn 0.8s ease-in-out;
      }

      .slide-in-up {
        animation: slideInUp 0.6s ease-out forwards;
      }

      .banner-image {
        border: 2px solid transparent;
        background: linear-gradient(45deg, #34d399, #22d3ee);
        border-radius: 1rem;
        padding: 4px;
        transition: transform 0.3s ease;
      }

      .banner-image:hover {
        transform: scale(1.02);
      }

      .tags-container {
        opacity: 1;
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
        margin-bottom: 1rem;
      }

      .cta-buttons {
        opacity: 1;
        display: flex;
        flex-direction: column;
        gap: 1rem;
        margin: 1.5rem 0;
      }

      @media (min-width: 640px) {
        .cta-buttons {
          flex-direction: row;
        }
      }

      .features-grid, .use-cases-grid, .roadmap-grid, .team-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: 1rem;
        margin-top: 1.5rem;
      }

      @media (min-width: 640px) {
        .features-grid, .use-cases-grid, .roadmap-grid, .team-grid {
          grid-template-columns: repeat(2, 1fr);
        }
      }

      .feature-card, .use-case-card, .roadmap-card, .team-card {
        border: 1px solid;
        border-radius: 0.75rem;
        padding: 1rem;
        transition: all 0.3s ease;
        opacity: 1;
        background-color: transparent;
      }

      html:not(.dark) .feature-card,
      html:not(.dark) .use-case-card,
      html:not(.dark) .roadmap-card,
      html:not(.dark) .team-card {
        border-color: rgba(34, 211, 238, 0.2);
        background-color: rgba(248, 250, 252, 0.5);
      }

      html:not(.dark) .feature-card:hover,
      html:not(.dark) .use-case-card:hover,
      html:not(.dark) .roadmap-card:hover,
      html:not(.dark) .team-card:hover {
        transform: translateY(-5px);
        border-color: rgba(34, 211, 238, 0.5);
        box-shadow: 0 5px 15px rgba(34, 211, 238, 0.2);
        background-color: rgba(255, 255, 255, 0.8);
      }

      .dark .feature-card,
      .dark .use-case-card,
      .dark .roadmap-card,
      .dark .team-card {
        border-color: rgba(52, 211, 153, 0.2);
        background-color: rgba(31, 41, 55, 0.3);
      }

      .dark .feature-card:hover,
      .dark .use-case-card:hover,
      .dark .roadmap-card:hover,
      .dark .team-card:hover {
        transform: translateY(-5px);
        border-color: rgba(52, 211, 153, 0.5);
        box-shadow: 0 5px 15px rgba(52, 211, 153, 0.3);
        background-color: rgba(55, 65, 81, 0.5);
      }

      .feature-card .icon, .use-case-card .emoji {
        font-size: 1.5rem;
        margin-right: 0.75rem;
      }

      html:not(.dark) .feature-card .icon,
      html:not(.dark) .use-case-card .emoji {
        color: #22d3ee;
      }

      .dark .feature-card .icon,
      .dark .use-case-card .emoji {
        color: #34d399;
      }

      .feature-card h3, .use-case-card h3, .roadmap-card h3, .team-card h3 {
        font-size: 1.1rem;
        font-weight: 600;
        margin-bottom: 0.25rem;
        color: inherit;
      }

      html:not(.dark) .feature-card h3,
      html:not(.dark) .use-case-card h3,
      html:not(.dark) .roadmap-card h3,
      html:not(.dark) .team-card h3 {
        color: #1f2937;
      }

      .dark .feature-card h3,
      .dark .use-case-card h3,
      .dark .roadmap-card h3,
      .dark .team-card h3 {
        color: #ffffff;
      }

      .roadmap-card .status {
        font-size: 0.75rem;
        font-weight: 500;
        padding: 0.25rem 0.5rem;
        border-radius: 1rem;
        display: inline-block;
        margin-bottom: 0.5rem;
        color: #facc15;
        background: rgba(250, 204, 21, 0.1);
      }

      .section-heading {
        font-size: 1.5rem;
        font-weight: 700;
        margin-bottom: 1.5rem;
        position: relative;
        opacity: 1;
      }

      .dark .section-heading {
        color: #ffffff;
      }

      .section-heading::after {
        content: '';
        position: absolute;
        bottom: -0.5rem;
        left: 0;
        width: 50px;
        height: 2px;
        background: linear-gradient(to right, #34d399, #22d3ee);
        border-radius: 1px;
      }
    </style>

    <!-- Main Section -->
    <div class="millenai-section fade-in">
      <PageHeading
        title={project.name}
        description={project.description}
      />

      <!-- Banner Image -->
      <div class="my-4">
        <img
          src={project.image}
          alt={project.name}
          class="banner-image w-full h-auto rounded-lg aspect-[16/9] object-cover glow-pulse"
        />
      </div>

      <!-- CTA Buttons -->
      <div class="cta-buttons slide-in-up" style="animation-delay: 0.2s;">
        <a
          href={project.externalUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-block px-4 py-1.5 text-sm font-medium rounded-full border border-gray-300 dark:border-neutral-700 bg-gray-900 dark:bg-neutral-200 text-white dark:text-neutral-900 transition-all duration-300 hover:bg-gray-100 dark:hover:bg-neutral-900 hover:text-gray-900 dark:hover:text-neutral-100 glow-pulse"
        >
          Launch MillenAI
        </a>
        <a
          href={project.githubUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-block px-4 py-1.5 text-sm font-medium rounded-full border border-gray-300 dark:border-neutral-700 bg-transparent text-gray-900 dark:text-neutral-200 transition-all duration-300 hover:bg-gray-900 dark:hover:bg-neutral-200 hover:text-white dark:hover:text-neutral-900"
        >
          View on GitHub
        </a>
      </div>
    </div>

    <!-- Overview Section (Paragraphs) -->
    <div class="millenai-section">
      <h2 class="section-heading slide-in-up">What is MillenAI?</h2>
      <div class="prose prose-sm sm:prose-base dark:prose-invert slide-in-up" style="animation-delay: 0.2s;">
        <p>
          I was drowning in tabs. Every day, I'd have ChatGPT open in one window, Claude in another, maybe Perplexity for research, and if I wanted to try a new model like Llama or Mistral, that meant yet another interface to learn. I was constantly losing track of conversations, forgetting which model gave me which answer, and worst of all, whenever I closed a tab, hours of valuable back-and-forth would just vanish. I'd think "didn't I have a great conversation about that project yesterday?" only to realize it was gone forever because I'd closed the browser.
        </p>
        <p>
          The breaking point came when I was working on a complex coding problem. I'd spent two hours with one model, then wanted to get a second opinion from another, but there was no way to continue the same conversation thread. I had to copy-paste context, re-explain everything, and basically start from scratch. That's when I realized we needed a unified AI workspace‚Äîone place where you could seamlessly switch between the world's best models without losing context, history, or momentum.
        </p>
        <p>
          MillenAI became my answer to this chaos. It's the AI interface I wished existed, where you can start a conversation with Llama, get a second opinion from GPT-OSS, maybe add web search capabilities with a simple toggle, all within the same chat thread. Your conversations are permanently saved and organized, your context never gets lost, and switching models feels as natural as changing fonts in a document. No more tab juggling, no more lost insights, no more starting over. Just pure, uninterrupted AI conversation flow.
        </p>
      </div>
    </div>

    <!-- Features Section -->
    <div class="millenai-section">
      <h2 class="section-heading slide-in-up">Key Features</h2>
      <div class="features-grid">
        {project.features.map((feature, index) => (
          <div class="feature-card slide-in-up" style={`animation-delay: ${0.2 * (index + 1)}s;`}>
            <div class="flex items-center">
              <span class="icon">{feature.icon}</span>
              <h3>{feature.name}</h3>
            </div>
            <p>{feature.description}</p>
          </div>
        ))}
      </div>
    </div>

    <!-- Use Cases Section -->
    <div class="millenai-section">
      <h2 class="section-heading slide-in-up">Perfect For</h2>
      <div class="use-cases-grid">
        {project.useCases.map((useCase, index) => (
          <div class="use-case-card slide-in-up" style={`animation-delay: ${0.2 * (index + 1)}s;`}>
            <span class="emoji">{useCase.emoji}</span>
            <div>
              <h3>{useCase.name}</h3>
              <p>{useCase.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- Technology Section (Paragraphs) -->
    <div class="millenai-section">
      <h2 class="section-heading slide-in-up">Technology & Architecture</h2>
      <div class="prose prose-sm sm:prose-base dark:prose-invert slide-in-up" style="animation-delay: 0.2s;">
        <p>
          MillenAI is built with a modern, high-performance tech stack. The frontend is powered by <strong>React 19+</strong> and <strong>Vite</strong>, delivering a lightning-fast user experience with concurrent features. Styling is handled with <strong>Tailwind CSS v4</strong>, while fluid animations are crafted using <strong>Framer Motion</strong>.
        </p>
        <p>
          For the backend and user management, it leverages <strong>Firebase Auth</strong> for secure Google Sign-In and <strong>Firestore</strong> for real-time, persistent storage of conversations. The core AI interactions are powered by the ultra-fast <strong>Groq API</strong>, with plans to integrate more providers like OpenRouter and Together AI in the future. The entire application is deployed globally on <strong>Vercel</strong> for low-latency access.
        </p>
      </div>
    </div>

    <!-- Roadmap Section -->
    <div class="millenai-section">
      <h2 class="section-heading slide-in-up">What's Next</h2>
      <div class="roadmap-grid">
        {project.roadmap.map((item, index) => (
          <div class={`roadmap-card slide-in-up ${item.status.toLowerCase().replace(' ', '-')}`} style={`animation-delay: ${0.2 * (index + 1)}s;`}>
            <span class="status">{item.status}</span>
            <h3>{item.name}</h3>
          </div>
        ))}
      </div>
    </div>

    <!-- Team Section -->
    <div class="millenai-section">
      <h2 class="section-heading slide-in-up">The Team</h2>
      <div class="team-grid" style="grid-template-columns: 1fr;">
        {project.team.map((member, index) => (
          <div class="team-card slide-in-up" style={`animation-delay: ${0.2 * (index + 1)}s;`}>
            <h3>{member.name}</h3>
            <p>{member.institution}</p>
            <a href={member.github} target="_blank" rel="noopener noreferrer" class="hover:underline">
              View GitHub
            </a>
          </div>
        ))}
      </div>
    </div>

    <!-- Final Call to Action -->
    <div class="millenai-section">
      <h2 class="section-heading slide-in-up">Get Started</h2>
      <div class="prose prose-sm sm:prose-base dark:prose-invert slide-in-up" style="animation-delay: 0.2s;">
        <p>
          Ready to experience the future of AI conversation? Launch the app to start chatting or dive into the open-source codebase on GitHub to contribute.
        </p>
      </div>
      <div class="cta-buttons slide-in-up" style="animation-delay: 0.4s;">
        <a
          href={project.externalUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-block px-4 py-1.5 text-sm font-medium rounded-full border border-gray-300 dark:border-neutral-700 bg-gray-900 dark:bg-neutral-200 text-white dark:text-neutral-900 transition-all duration-300 hover:bg-gray-100 dark:hover:bg-neutral-900 hover:text-gray-900 dark:hover:text-neutral-100 glow-pulse"
        >
          Launch MillenAI
        </a>
        <a
          href={project.githubUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-block px-4 py-1.5 text-sm font-medium rounded-full border border-gray-300 dark:border-neutral-700 bg-transparent text-gray-900 dark:text-neutral-200 transition-all duration-300 hover:bg-gray-900 dark:hover:bg-neutral-200 hover:text-white dark:hover:text-neutral-900"
        >
          Contribute on GitHub
        </a>
      </div>
    </div>

    <!-- Script for Animations -->
    <script is:inline>
      document.addEventListener('DOMContentLoaded', () => {
        const observer = new IntersectionObserver((entries) => {
          entries.forEach(entry => {
            if (entry.isIntersecting) {
              entry.target.classList.add('slide-in-up');
            }
          });
        }, { threshold: 0.1 });

        document.querySelectorAll('.slide-in-up').forEach(element => {
          observer.observe(element);
        });

        setTimeout(() => {
          document.querySelectorAll('.slide-in-up').forEach(element => {
            element.classList.add('slide-in-up');
          });
        }, 1000);
      });
    </script>
  </section>
</Layout>