---
import Button from "../components/button.astro";
import Projects from "../components/home/projects.astro";
import Separator from "../components/home/separator.astro";
import Writings from "../components/home/writings.astro";
import Layout from "../layouts/main.astro";
import StatusIndicator from "../components/status-indicator.astro";

// Add structured data for your personal information
const personSchema = {
  "@context": "https://schema.org",
  "@type": "Person",
  "name": "Rajin Khan",
  "description": "CS student from Dhaka, Bangladesh focusing on Supervised Machine Learning",
  "url": "https://rajinkhan.vercel.app",
  "sameAs": [
    // Add your social media profiles here
    "https://github.com/rajin-khan",
    "https://www.linkedin.com/in/rajin-khan",
    "https://www.instagram.com/raaajiin/",
    "https://www.facebook.com/rajinisdown/"
  ]
};
---

<Layout 
  title="Rajin Khan"
  description="CS student from Dhaka, Bangladesh specializing in Supervised Machine Learning, Data Analytics, and Mobile Development."
>
  <main class="relative z-20 w-full max-w-4xl mx-auto mt-16 px-7 md:mt-24 lg:mt-32 xl:px-0">
    <section class="flex flex-col items-center md:flex-row">
      <div class="relative w-full md:w-1/2">
        <h1 class="mb-5 text-4xl font-bold leading-tight md:text-4xl lg:text-6xl dark:text-white">
          Hello, I'm Rajin.
        </h1>
        <p class="mb-6 text-base text-neutral-600 dark:text-neutral-400">
          A CS student from Dhaka, Bangladesh. <br class="hidden lg:block" />
          Lately, I've been obsessed with Machine Learning.
        </p>
        <h2 class="mb-2 font-semibold text-neutral-800 dark:text-neutral-200">
          I also excel in:
        </h2>
        <ul class="py-2 space-y-[3px] text-sm list-disc list-inside text-neutral-500 dark:text-neutral-400">
          <li>Data Analytics</li>
          <li>Model Training</li>
          <li>Mobile Development</li>
          <li>and Graphic Design</li>
        </ul>
        <div class="flex items-center gap-6">
            <Button text="📝 View My Resume" link="/resume.pdf" />
            <div class="mt-5">
                <StatusIndicator status="uni" />
            </div>
        </div>
      </div>
      
      <div class="relative justify-end hidden w-full mt-10 md:flex md:pl-10 md:w-1/2 md:mt-0 md:translate-y-4 xl:translate-y-0">
        <div class="relative z-50 w-full">
          <div class="absolute bottom-0 z-40 w-16 h-16 -translate-x-6 -translate-y-1/2 lg:top-auto top-0 lg:-translate-y-[330px] rounded-full">
            <span class="relative z-20 flex items-center justify-center w-full h-full text-2xl border-8 border-white rounded-full dark:border-neutral-950 bg-neutral-100 dark:bg-neutral-900">
              <span class="flex items-center justify-center w-full h-full bg-white border border-dashed rounded-full dark:bg-neutral-950 border-neutral-300 dark:border-neutral-700" aria-hidden="true">
                😴
              </span>
            </span>
          </div>
          <div class="relative z-30 px-10">
            <img
              src="/assets/images/image.png"
              class="relative z-30 w-auto h-auto max-w-xs md:max-w-md mx-auto translate-x-[-65px] translate-y-[-1px]"
              alt="Rajin Khan - Computer Science Student and Machine Learning Enthusiast"
              width="400"
              height="400"
              loading="eager"
            />
          </div>
          <div class="absolute bottom-0 right-0 z-20 w-full h-full lg:h-[420px] translate-x-0 -translate-y-px border border-dashed rounded-2xl bg-gradient-to-r dark:from-neutral-950 dark:via-black dark:to-neutral-950 from-white via-neutral-50 to-white border-neutral-300 dark:border-neutral-700">
          </div>
        </div>
      </div>
    </section>
  </main>

  <Separator text="My projects" />
  <Projects />
  <Separator text="Oh, and I talk a lot" />
  <Writings />

  <!-- Add structured data -->
  <script type="application/ld+json" set:html={JSON.stringify(personSchema)} />
</Layout>