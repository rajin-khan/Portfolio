---
import Button from "../components/button.astro";
import Projects from "../components/home/projects.astro";
import Separator from "../components/home/separator.astro";
import Writings from "../components/home/writings.astro";
import Layout from "../layouts/main.astro";
import StatusIndicator from "../components/status-indicator.astro";
import TechStack from "../components/tech-stack.astro";
import LatestCommit from "../components/latest-commit.astro";

const personSchema = {
  "@context": "https://schema.org",
  "@type": "Person",
  "name": "Rajin Khan",
  "description": "CS student from Dhaka, Bangladesh focusing on Supervised Machine Learning",
  "url": "https://rajinkhan.com",
  "sameAs": [
    "https://github.com/rajin-khan",
    "https://www.linkedin.com/in/rajin-khan",
    "https://www.instagram.com/raaajiin/",
    "https://www.facebook.com/rajinisdown/"
  ],
  "jobTitle": "Senior Computer Science Student",
  "worksFor": {
    "@type": "The Data Island",
    "name": "Junior AI Engineer"
  },
  "address": {
    "@type": "PostalAddress",
    "addressLocality": "Dhaka",
    "addressCountry": "Bangladesh"
  },
  "image": "https://rajinkhan.com/assets/images/rajins-banner.png" // Add image to schema
};

const pageTitle = "Rajin Khan - Computer Science Portfolio | Generative AI & Web Development";
const pageDescription = "Explore Rajin Khan’s portfolio, a Computer Science student from Dhaka, Bangladesh, specializing in Generative AI, Data Analytics, and Web Development projects.";
const ogImage = "/assets/images/rajins-banner.png"; // Update to new Open Graph image
---

<Layout 
  title={pageTitle} 
  description={pageDescription} 
  ogImage={ogImage}
>
  <main class="relative z-20 w-full max-w-4xl mx-auto mt-16 px-7 md:mt-24 lg:mt-32 xl:px-0">
    <section class="flex flex-col-reverse md:flex-row items-center">
      <div class="relative w-full md:w-1/2">
        <h1 class="mb-5 text-4xl font-bold leading-tight md:text-4xl lg:text-6xl dark:text-white">
          Hey, I'm Rajin.
        </h1>
        <p class="mb-6 text-base text-neutral-600 dark:text-neutral-400">
          A scatterbrained Developer from Dhaka. <br class="hidden lg:block" />
          I'm driven by a need to craft innovative solutions for complex, or even the simplest problems.
        </p>
        <h2 class="mb-2 font-semibold text-neutral-800 dark:text-neutral-200">
          I also excel in:
        </h2>
        <ul class="py-2 space-y-[3px] text-sm list-disc list-inside text-neutral-500 dark:text-neutral-400">
          <li>Generative AI</li>
          <li>Web Development</li>
          <li>Computer Vision</li>
          <li>and Graphic Design</li>
        </ul>
        <div class="flex items-center gap-6">
            <Button text="📝 View My Resume" link="/AdibsResume.pdf" />
            <div class="mt-5">
                <StatusIndicator status="online" />
            </div>
        </div>
      </div>
      
      <div class="relative flex justify-center w-full mt-10 md:mt-0 md:w-1/2 md:translate-y-4 xl:translate-y-0 order-first md:order-none">
        <div class="relative flex items-center justify-center w-[280px] h-[280px] lg:w-[360px] lg:h-[360px] border-2 border-dashed rounded-full border-neutral-300 dark:border-neutral-700">
          <img
            src="/assets/images/rajin-darkbg.png"
            class="w-[265px] h-[265px] lg:w-[335px] lg:h-[335px] rounded-full object-cover"
            alt="Rajin Khan - Computer Science Student and Machine Learning Enthusiast"
            width="390"
            height="390"
            loading="eager"
          />
        </div>
      </div>
    </section>
  </main>

  <Separator text="My projects" />
  <Projects />

  <Separator text="Tech Stack" />
  <TechStack />

  <Separator text="Latest Activity" />
  <LatestCommit />
  
  <Separator text="Oh, and I talk a lot" />
  <Writings />

  <script type="application/ld+json" set:html={JSON.stringify(personSchema)} />
</Layout>