const duplicatedTechStack = [...techStackItems, ...techStackItems];
const animationDuration = techStackItems.length * 3; 
---

<section class="py-0 md:py-0 w-full"> 
    <div class="scroller-container max-w-5xl mx-auto" data-animated="true"> 
      <div class="scroller-inner">
        {duplicatedTechStack.map((tech) => (
          <div class="tech-item">
            <img src={tech.logoUrl} alt={tech.name} class="tech-logo" />
            <span class="tech-name">{tech.name}</span>
          </div>
        ))}
      </div>
    </div>
  </section>
  
  <style define:vars={{ animationDuration: `${animationDuration}s` }}>
    .scroller-container {
      overflow: hidden;
      -webkit-mask: linear-gradient(90deg, transparent, white 10%, white 90%, transparent);
              mask: linear-gradient(90deg, transparent, white 10%, white 90%, transparent);
    }
  
    .scroller-inner {
      display: flex;
      flex-wrap: nowrap;
      width: max-content; 
      animation: scroll var(--animationDuration) linear infinite;
    }
  
    .tech-item {
      @apply flex items-center gap-x-4 px-6 py-0 whitespace-nowrap; 
      /* UPDATED: Transition all properties for smooth shadow fade-in */
      @apply transition-all duration-200 ease-in-out; 
      /* Optional: Add slight padding if shadow gets clipped, but usually okay */
    }
  
    .tech-item:hover {
       transform: scale(1.1); 
    }
  
    .tech-logo {
      @apply w-8 h-8 md:w-10 md:h-10 object-contain flex-shrink-0; 
      /* ADDED: Permanent subtle drop shadow for visibility */
      /* Adjust color/opacity/blur/offset as needed */
      filter: drop-shadow(0px 1px 2px rgba(0, 0, 0, 0.15)) 
              drop-shadow(0px 0px 1px rgba(0, 0, 0, 0.2)); /* Two shadows for slightly more definition */
    }
  
    .tech-name {
      @apply text-base md:text-lg font-bold text-neutral-800 dark:text-neutral-200; 
    }
  
    .scroller-container:hover .scroller-inner {
      animation-play-state: paused;
    }
  
    @keyframes scroll {
      0% {
        transform: translateX(0);
      }
      100% {
        transform: translateX(-50%); 
      }
    }
  </style>