---
import Button from "../button.astro";
import PostsLoop from "../posts-loop.astro";

const feed = "https://feed.miantiao.me/";
---

<section class="max-w-4xl mx-auto px-7 lg:px-0">
  <h2
    class="text-2xl font-bold leading-10 tracking-tight text-neutral-900 dark:text-neutral-100"
  >
    Blog Posts
  </h2>
  <p class="mb-6 text-base text-neutral-600 dark:text-neutral-400">
    Non-stop talking. Tech, Design, and other things that interest me.
  </p>

  <div class="w-full max-w-4xl mx-auto my-7 xl:px-0">
    <div
      class="flex flex-col items-start justify-start md:flex-row md:space-x-7"
    >
      <div class="w-full md:w-2/3 space-y-7">
        <PostsLoop count="3" />

        <div class="flex items-center justify-center w-full py-5">
          <Button text="All My Posts" link="/posts" />
        </div>
      </div>
      <div class="w-full mt-10 md:w-1/3 md:mt-0">
        <form
          method="get"
          action={feed}
          class="p-6 border border-dashed rounded-2xl border-neutral-300 dark:border-neutral-600"
        >
        <div class="p-1 flex justify-center items-center border border-dashed rounded-xl border-neutral-300 dark:border-neutral-600 bg-white dark:bg-neutral-900">
            <div class="w-full max-w-xs p-3 rounded-lg bg-white dark:bg-neutral-800 text-center shadow-md">
              <div class="flex justify-center items-center space-x-2">
                <!-- GitHub Logo -->
                <svg
                  class="w-5 h-5 text-neutral-800 dark:text-neutral-200"
                  xmlns="http://www.w3.org/2000/svg"
                  viewBox="0 0 24 24"
                  fill="currentColor"
                >
                  <path
                    fill-rule="evenodd"
                    clip-rule="evenodd"
                    d="M12 .297C5.373.297 0 5.67 0 12.297c0 5.302 3.438 9.799 8.207 11.387.6.111.793-.26.793-.577v-2.253c-3.338.724-4.042-1.416-4.042-1.416-.546-1.387-1.334-1.756-1.334-1.756-1.091-.744.083-.729.083-.729 1.205.085 1.838 1.238 1.838 1.238 1.07 1.834 2.809 1.304 3.494.997.108-.775.419-1.305.76-1.604-2.665-.303-5.466-1.332-5.466-5.93 0-1.309.468-2.38 1.236-3.22-.124-.303-.535-1.521.116-3.166 0 0 1.008-.322 3.302 1.23a11.517 11.517 0 013.006-.404c1.02.005 2.047.137 3.006.404 2.294-1.552 3.302-1.23 3.302-1.23.651 1.645.24 2.863.117 3.166.77.84 1.235 1.911 1.235 3.22 0 4.609-2.805 5.624-5.479 5.92.43.372.813 1.102.813 2.222v3.293c0 .321.191.693.801.576C20.566 22.095 24 17.598 24 12.297 24 5.67 18.627.297 12 .297z"
                  />
                </svg>
          
                <!-- Title -->
                <h2 class="text-sm font-semibold text-neutral-800 dark:text-neutral-100">
                  Latest Project
                </h2>
              </div>
          
              <!-- Description -->
              <p class="mt-1 text-xs text-neutral-600 dark:text-neutral-400">
                GridGenius - AI powered Energy Optimization
              </p>
          
              <!-- Gradient Animated Tags -->
              <div class="flex flex-wrap justify-center mt-2 gap-1">
                <span class="tag bg-gradient-to-r from-pink-500 to-yellow-600">AI</span>
                <span class="tag bg-gradient-to-r from-green-400 to-blue-600">Machine Learning</span>
                <span class="tag bg-gradient-to-r from-indigo-500 to-purple-600">Deep Learning</span>
                <span class="tag bg-gradient-to-r from-blue-500 to-orange-500">Research</span>
              </div>
          
              <!-- Button -->
              <div class="flex justify-center mt-3">
                <a
                  href="https://github.com/rajin-khan/GridGenius"
                  target="_blank"
                  class="w-full px-5 py-2 text-xs font-semibold text-white bg-neutral-800 dark:bg-neutral-100 dark:hover:border-neutral-300 dark:text-neutral-800 dark:hover:bg-neutral-950 dark:hover:text-neutral-100 rounded-md border border-neutral-700 hover:bg-neutral-900 hover:text-white transition text-center"
                >
                  Take me there!
                </a>
              </div>
            </div>
          </div>          
            
        </form>
      </div>
    </div>
  </div>
</section>
